<% include ./partials/header %>
<section id="resetContainer">
<form action="/reset/<%= token %>" method="POST">
  <h1>Reset your password</h1>
  <div class="form-group">
    <label for="password">New Password</label>
    <input type="text" name="password"  placeholder="New Password" autofocus="autofocus" class="form-control" style="outline:none;" />
    </div>
    <div class="form-group">
      <label for="confirm">Confirm Password</label>
      <input type="text" name="confirm" placeholder="Confirm Password" class="form-control" style="outline:none;"/>
      </div>
      <div class="form-group">
        <input type="submit" value="submit"/>
        </div>
  </form>
  </section>

  <% include ./partials/footer %>
